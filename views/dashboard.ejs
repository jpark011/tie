<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tie</title>
    <% include partials/commonMeta %>
    <% include partials/commonCss %>
  </head>

  <body>
    <% include partials/navbar %>
    <section class="features-icons text-center">
      <div class="container">
        <div class="row">
          <% for(var i=0; i < games.length; i++) { %>
            <div class="col-lg-4">
              <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                <img src="<%= games[i].thumbnail %>" height="200px" width="200px" />
                <h3><%= games[i].displayTitle %></h3>
                <p class="lead mb-0"><%= games[i].description %></p>
              </div>
          </div>
          <% } %>
          <div class="col-lg-4">
            <a href="/game/new" class="btn btn-primary my-2 my-sm-0">New Game</a>
          </div>
        </div>
      </div>
    </section>
    <% include partials/footer %>
    <% include partials/commonJs %>
  </body>
</html>
